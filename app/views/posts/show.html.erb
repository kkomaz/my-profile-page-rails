<div class="post-page">
  <header>
    <p class="post-page__date"><%= @post.created_at.strftime('%A, %B, %d') %></p>
    <h1><%= @post.title %></h1>
    <%= image_tag @post.image.url(:large) %>
  <hr>
  </header>

<div class="post-page__content">
<p><%= markdown(@post.content) %></p>
</div>

<hr>

<div class="post-page__share_box">
  <p>Share <%= @post.title %></p>
    <% if user_signed_in? %>
      <div id="admin_links">
        <%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
      </div>
    <% end %>
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @kkomaz - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
</div>

<hr>

<%= render 'disqus' %>

</div>
