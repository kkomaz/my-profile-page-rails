<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error")%> prevented this post from saving: </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title, "Title" %><br>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :image, "Image" %> <br>
  <%= f.file_field :image %>

  <br>
  <br>

  <%= f.label :content, "Write your blog post here" %><br>
  <%= f.text_area :content %>

  <%= f.check_box :public %>
  <%= f.label :public, "Public?" %>

  <br>
  <br>

  <%= f.submit "Submit your Blog" %>

<% end %>
