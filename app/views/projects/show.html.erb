<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime('%A, %B, %d') %></p>
    <h1><%= @project.title %></h1>
    <%= image_tag @project.image.url(:large) %>
  <hr>
  </header>

<div id="content">
  <%= markdown(@project.description) %>
  <div class="share_box">
  <% if user_signed_in? %>
    <%= link_to "Edit", edit_project_path(@project) %>
    <%= link_to "Destroy", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
  <% end %>
  </div>
  <div class="button_wrapper">
    <a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
  </div>
</div>

<hr>
</div>