<h1 id="page_title"> My Screencasts</h1>
<div id="post_wrapper" class="skinny_wrapper">
  <% if user_signed_in? %>
  <div id="new_links">
    <%= link_to "Create New Video", new_video_path %>
  </div>
  <% end %>
  <% if !@videos.empty? %>
  <% @videos.each do |video| %>
  <div class="post">    
    <p class="date"><%= video.created_at.strftime('%A, %B, %d') %></p>
    <h2><%= link_to video.title, video %></h2>
      <% if user_signed_in? %>
        <div id="admin_links">
          <%= link_to "Edit", edit_video_path(video) %>
          <%= link_to "Destroy", video_path(video), method: :delete, data: {confirm: "Are you sure you want to delete this video?"} %>
        </div>
      <% end %>
    <hr>
    <% end %>
  </div>
  <% else %>
    Coming soon...
  <% end %>
</div>

     